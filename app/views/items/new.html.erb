<%= form_with url: "/items", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br/>
  <br/>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <br/>
  <br/>
  <%= form.label :price %>
  <%= form.number_field :price, step: :any %>
  <br/>
  <br/>
  <%= form.label :inventory %>
  <%= form.number_field :inventory %>
  <br/>
  <br/>
  <%= form.submit "Create Item" %>
<% end %>

<% flash.each do |type, message| %>
  <p><%= message %></p>
<% end %>
