<h1>Real Corp Items</h1>
<br>
<%= button_to "Create a new item", "/items/new", method: :get %>
<br>

<ul>
  <% @items.each do |item| %>
    <li id="item-<%= item.id %>">
      <h4><a href="/items/<%= item.id %>"><%= item.name %></a></h4>
      <p>Price: <%= item.formatted_price %></p>
      <p>Inventory: <%= item.inventory %></p>
    </li>
  <% end %>
</ul>
